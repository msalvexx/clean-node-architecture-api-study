{
  "name": "clean-node-api",
  "version": "1.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node dist/main/server.js",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
    "build": "rimraf dist && tsc",
    "up": "npm run build && docker-compose up -d",
    "down": "docker-compose down",
    "dev": "sucrase-node src/main/server.ts",
    "test": "npm run test:verbose -- --silent --noStackTrace",
    "test:verbose": "jest --passWithNoTests",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js --runInBand",
    "test:staged": "npm test -- --findRelatedTests --maxWorkers=4",
    "test:ci": "npm test -- --coverage",
    "test:verbose:unit": "npm run test:verbose -- --watch -c jest-unit-config.js",
    "test:verbose:integration": "npm run test:verbose -- --watch -c jest-integration-config.js --runInBand"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.6.3",
    "nodemon": "^2.0.7",
    "validator": "^13.5.2"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.3",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.19",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongodb": "^3.6.3",
    "@types/node": "^14.14.13",
    "@types/supertest": "^2.0.10",
    "@types/validator": "^13.1.2",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "eslint": "^7.15.0",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.1.0",
    "git-commit-msg-linter": "^3.0.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "rimraf": "^3.0.2",
    "sucrase": "^3.17.0",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": "12.x"
  }
}
